  
<h1>Update Pet</h1>
 
<form action="/pets/<%= @pet.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label for="pet_name">Pet Name:</label>
  <br>
  <input type="text" name="pet_name" value="<%= @pet.name %>" id="pet_name">
 
    <br>
    <p>Select an existing Owner or create a new one below:</p>
 
 
  <h3>Existing Owners</h3>
    <% @owners.each do |owner| %>

        <% if @pet.owner == owner %>
        <input type="radio" name="owner_id" id="<%= owner.id %>" value="<%= owner.id %>" checked><%= owner.name %></input><br>
        <% else %>
        <input type="radio" name="owner_id" id="<%= owner.id %>" value="<%= owner.id %>"><%= owner.name %></input><br>
        <% end %>

    <% end %>
    <br>
 
    <h3>New Owner</h3>
    <label>Owner Name: </label>
    <br>
    <input type="text" name="owner_name" id="owner[name]"></input>
    <br>
 
    <input type="submit" value="Update Pet">
  </form>